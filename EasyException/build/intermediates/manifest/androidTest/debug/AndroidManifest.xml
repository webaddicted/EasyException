<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.deepaksharma.webaddicted.test" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <instrumentation
        android:name="android.support.test.runner.AndroidJUnitRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.example.library.test"
        android:targetPackage="com.example.library.test" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNAL_SYSTEM_WINDOW" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity android:name="com.deepaksharma.webaddicted.permission.PermissionActivity" />
    </application>

</manifest>